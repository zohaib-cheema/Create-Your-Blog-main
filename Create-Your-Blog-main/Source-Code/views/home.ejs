
<%- include("partials/header"); -%>
    <h1>Home</h1>
    <p> <%= startingContent %> </p>


  <%  posts.forEach(function(post){ %>

    <h1><%=post.title%></h1>

    <% if(post.content.length > 100){ %>
      <%let truncated = post.content.slice(0,100) + " ..."%>
      <p><%=truncated%> <a href="/posts/<%= post.title %>">Read More</a> </p> 
    <% } %>
    <% if(post.content.length <= 100){ %>
      <p><%=post.content%></p>
    <% } %>


<% }); %>


<%- include("partials/footer"); -%>
